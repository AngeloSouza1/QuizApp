<%= form_with(model: [@quiz, @question, @answer], url: admin_quiz_question_answer_path(@quiz, @question, @answer), local: true, method: :patch, class: 'form-horizontal') do |form| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@answer.errors.count, "erro") %> proibiu esta resposta de ser salva:</h4>
      <ul>
        <% @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <div class="card mb-4 shadow-sm mt-4">
        <div class="card-header bg-dark-blue text-white d-flex align-items-center">
            <i class="fas fa-pencil-alt mr-2"></i>
            <h5 class="mb-0"><%= form.label :content, "Conteúdo da Resposta", class: 'col-form-label font-weight-bold' %></h5>
        </div>
        <div class="card-body">
            <%= form.text_area :content, class: 'form-control', placeholder: 'Digite o conteúdo da resposta' %>
        </div>
    </div>
</div>

  <div class="form-group form-check">
    <%= form.check_box :correct, class: 'form-check-input' %>
    <%= form.label :correct, "Correta?", class: 'form-check-label' %>
  </div>

  <div class="actions mt-3">
    <%= form.submit 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>

<style>
  .form-group {
    margin-bottom: 20px;
  }

  .col-form-label {
    font-weight: bold;
    color: #495057;
  }

  .form-control {
    border-radius: 5px;
    border: 1px solid #ced4da;
    padding: 10px;
    font-size: 1rem;
    color: #495057;
  }

  .form-control:focus {
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
  }

  .form-check-input {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }

  .btn-primary {
    background-color: #204a80;
    border-color: #204a80;
    padding: 10px 20px;
    border-radius: 10px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #183a61;
    transform: scale(1.05);
  }
</style>
