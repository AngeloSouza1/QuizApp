<%= form_with(model: [@quiz, @question, @answer], url: admin_quiz_question_answer_path(@quiz, @question, @answer), local: true, method: :patch) do |form| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@answer.errors.count, "erro") %> proibiu esta resposta de ser salva:</h4>
      <ul>
        <% @answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

