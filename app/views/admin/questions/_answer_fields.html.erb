<!-- app/views/admin/questions/_answer_fields.html.erb -->
<div class="nested-fields">
  <%= f.label :content, "Resposta" %>
  <%= f.text_field :content %>
  
  <%= f.label :correct, "Correta?" %>
  <%= f.check_box :correct %>

  <!-- Campo oculto para remoção no backend -->
  <%= f.hidden_field :_destroy %>

  <!-- Link para remover a resposta -->
  <%= link_to "Remover Resposta", "#", class: "remove_answer" %>
</div>
