<!-- app/views/quizzes/index.html.erb -->

<div class="container mt-5">
  <h1 class="text-center mb-4 text-secondary-dark">Quizzes Disponíveis</h1>

  <div class="row">
    <% @quizzes.each do |quiz| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-lg h-100 border-0 rounded-extra card-custom">
          <div class="card-body">
            <h5 class="card-title text-primary"><%= quiz.title %></h5>
            <p class="card-text"><%= quiz.description %></p>
            <div class="text-center mt-4">
              <%= link_to 'Responder', quiz_path(quiz), class: 'btn btn-custom btn-sm text-white font-weight-bold' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .container {
    max-width: 1200px;
  }

  .text-secondary-dark {
    color: #204a80; /* Cor harmoniosa para títulos */
  }

  .card {
    background-color: #ffffff; 
    border-radius: 30px; 
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    border: 1px solid #204a80; /* Bordas azul harmônico */
  }

  .card-custom:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    border-color: #3568b5; 
    transition: box-shadow 0.3s ease, transform 0.3s ease, border-color 0.3s ease;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .card-text {
    font-size: 1rem;
    color: #6c757d;
  }

  .btn-custom {
    border-radius: 50px;
    border: 2px solid #ffffff;
    background-color: #2b5b9e; /* Escurecer o botão com um tom harmônico */
    padding: 10px 20px;
    transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .btn-custom::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300%;
    height: 300%;
    background-color: rgba(255, 255, 255, 0.2);
    transition: all 0.5s ease;
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
  }

  .btn-custom:hover::before {
    transform: translate(-50%, -50%) scale(1);
  }

  .btn-custom:hover {
    background-color: #204a80; 
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    transform: scale(1.05);
  }
</style>
